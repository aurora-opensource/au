# Minimal legacy WORKSPACE project to test that Au can be consumed via
# http_archive or local_repository. This simulates a user's project that
# depends on Au using the traditional WORKSPACE approach.

workspace(name = "workspace_test_client")

load("@bazel_tools//tools/build_defs/repo:http.bzl", "http_archive")

local_repository(
    name = "au",
    path = "..",
    repo_mapping = {"@googletest": "@com_google_googletest"},
)

# GoogleTest - Note: using name "com_google_googletest" instead of "googletest"
# to simulate how many real-world projects load googletest. This tests that
# Au's @googletest references work correctly for WORKSPACE consumers.
# Using 1.11.0 for compatibility with older Bazel versions (1.x - 4.x).
http_archive(
    name = "com_google_googletest",
    sha256 = "353571c2440176ded91c2de6d6cd88ddd41401d14692ec1f99e35d013feda55a",
    strip_prefix = "googletest-release-1.11.0",
    urls = ["https://github.com/google/googletest/archive/refs/tags/release-1.11.0.zip"],
)
